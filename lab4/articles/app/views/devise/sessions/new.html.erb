<h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 w-full max-w-md mx-auto" }) do |f| %>
  <div class="form-control">
    <%= f.label :email, class: "label" do %>
      <span class="label-text">Email</span>
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :password, class: "label" do %>
      <span class="label-text">Password</span>
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-control">
      <label class="label cursor-pointer justify-start gap-2">
        <%= f.check_box :remember_me, class: "checkbox" %>
        <span class="label-text">Remember me</span>
      </label>
    </div>
  <% end %>

  <div class="form-control">
    <%= f.submit "Log in", class: "btn btn-primary w-full" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links" %>
</div>
